{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "paths": {
      "shared": ["../shared/src"],
      "shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src"]
}
